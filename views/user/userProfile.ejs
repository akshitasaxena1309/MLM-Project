<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UserProfile</title>
    <link rel="stylesheet" href="/css/user/userProfile.css" />
    <link rel="stylesheet" href="/css/common.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/css/admin/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      .info {
        border: 2px solid black;
        display: flex;
        flex-direction: column;
        padding-left: 10px;
      }

      .sBox {
        display: flex;
      }
      .btn-class {
        width: 500px;
        background-color: #47754b;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin-bottom: 10px;
      }

      .btn-class:hover {
        background-color: #345a38;
      }
    </style>
  </head>

  <body>
    <%- partial('header') %>
    <div class="container">
      <div class="cards">
        <div class="card">
          <h2>0 INR</h2>
          <p>Total Deposit</p>
        </div>

        <div class="card">
          <h2>0 INR</h2>
          <p>Total Withdraw</p>
        </div>

        <div
          class="card"
          onclick="location.href='/user/orderDetails'"
          style="cursor: pointer"
        >
          <h2><%=userData.orders.length%></h2>
          <p>Total Orders</p>
        </div>
        <div class="card">
          <h2>0 INR</h2>
          <p>Total Invest</p>
        </div>
        <div class="card">
          <h2><%=userData.bv%></h2>
          <p>Total BV</p>
        </div>
        <div
          class="card"
          onclick="location.href='/user/userprofile/usertree?id=<%= userData._id %>'"
        >
          <h4>ReferId:<%=userData.referId%></h4>
          <p>User Tree</p>
        </div>

        <div class="card">
          <h2>Active</h2>
          <p>Status</p>
        </div>
        <div class="card">
          <h2>0.00 INR</h2>
          <p>Balance</p>
        </div>
      </div>
      <div class="accordion accordion-flush" id="accordionFlushExample">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#flush-collapseOne"
              aria-expanded="false"
              aria-controls="flush-collapseOne"
            >
              <h4>Personal Information</h4>
            </button>
          </h2>
          <div
            id="flush-collapseOne"
            class="accordion-collapse collapse"
            data-bs-parent="#accordionFlushExample"
          >
            <div class="accordion-body">
              <form action="/user/edit" method="post">
                <label for="username">User Name</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  value="<%=userData.username%>"
                />
                <label for="email">Email</label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  value="<%=userData.email%>"
                />
                <label for="phone">Phone</label>
                <input
                  type="text"
                  name="phone"
                  id="number"
                  value="<%=userData.phone%>"
                />

                <h5>Address</h5>
                <label for="street">Street</label>
                <input
                  type="text"
                  name="street"
                  id="street"
                  value="<%= userData.address.street %>"
                />

                <label for="city">City</label>
                <input
                  type="text"
                  name="city"
                  id="city"
                  value="<%= userData.address.city %>"
                />

                <label for="state">State</label>
                <input
                  type="text"
                  name="state"
                  id="state"
                  value="<%= userData.address.state %>"
                />

                <label for="zipCode">Zip Code</label>
                <input
                  type="text"
                  name="zipCode"
                  id="zipCode"
                  value="<%= userData.address.zipCode %>"
                />

                <label for="country">Country</label>
                <input
                  type="text"
                  name="country"
                  id="country"
                  value="<%= userData.address.country %>"
                />
                <button class="btn-class" style="width: 100px" type="submit">
                  Save
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#flush-collapseTwo"
              aria-expanded="false"
              aria-controls="flush-collapseTwo"
            >
              <h4>Signout</h4>
            </button>
          </h2>
          <div
            id="flush-collapseTwo"
            class="accordion-collapse collapse"
            data-bs-parent="#accordionFlushExample"
          >
            <div class="accordion-body">
              <div class="links">
                <button

                  onclick="location.href='/user/orderDetails'"
                  class="sign-out btn"
                  style="width: 200px"
                >
                  Order Details
                </button>

                <button

                  onclick="logout()"
                  class="sign-out btn"
                  style="width: 200px"
                >
                  Sign Out
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr />

    <%- partial('footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var imageInput = document.getElementById("imageInput");
        var previewImage = document.getElementById("previewImage");
        var editButton = document.getElementById("editButton");

        imageInput.addEventListener("change", function () {
          if (imageInput.files.length > 0) {
            var selectedFile = imageInput.files[0];
            var reader = new FileReader();

            reader.onload = function (e) {
              previewImage.src = e.target.result;
              previewImage.style.display = "block";
              editButton.style.display = "block";
              imageInput.style.display = "none"; // Hide the file input
            };

            reader.readAsDataURL(selectedFile);
          }
        });
      });

      async function logout() {
        const confirmation = confirm("Are you sure you want to log out?");

        if (confirmation) {
          try {
            // Make an asynchronous request to log out
            const response = await fetch(`/user/logout`);

            if (response.ok) {
              // If the response is successful, redirect or handle as needed
              window.location.href = "/user"; // Redirect to login page or another page
            } else {
              // If the response is not successful, handle the error
              console.error("Logout failed:", response.statusText);
              // You may want to show an error message to the user
            }
          } catch (error) {
            // Handle any network or other errors
            console.error("Error during logout:", error);
          }
        }
      }
    </script>
  </body>
</html>
